<?xml version="1.0" encoding="UTF-8"?>

<Configuration status="warn">
    <Appenders>
        <Console name="STDOUT-JSON" target="SYSTEM_OUT" follow="true">
            <JsonPatternLayout charset="utf-8" />
        </Console>
    </Appenders>
    <Loggers>
        <Root level="${LOG_ROOT_LEVEL:-INFO}">
            <AppenderRef ref="STDOUT" />
        </Root>
    </Loggers>
</Configuration>